@model IEnumerable<Category>

<div class="container-fluid p-3 shadow">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center m-1 ">

            <div>
                <a asp-action="Listing" asp-Controller="Home" asp-route-id="">Tüm Ürünler</a>
            </div>
            @if (Model != null && Model.Any())
            {
                @foreach (var kategori in Model)
                {
                    <div>
                        <a asp-action="Listing" asp-Controller="Home" asp-route-id="@kategori.Id"
                            class="text-decoration-none text-dark">@kategori.Name</a>
                    </div>
                }
            }

        </div>
    </div>
</div>
